<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="App\Entity\Personne" table="personne">
    <id name="idPersonne" type="integer" column="id_personne">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nom" type="string" column="nom" length="30" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="prenom" type="string" column="prenom" length="30" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="nationalite" type="string" column="nationalite" length="30" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-many field="idVideo" target-entity="Video" inversed-by="idPersonne" fetch="LAZY">
      <join-table name="participer">
        <join-columns>
          <join-column name="id_personne" referenced-column-name="id_personne"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="id_video" referenced-column-name="id_video"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="idRole" target-entity="Role" inversed-by="idPersonne" fetch="LAZY">
      <join-table name="posseder">
        <join-columns>
          <join-column name="id_personne" referenced-column-name="id_personne"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="id_role" referenced-column-name="id_role"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
