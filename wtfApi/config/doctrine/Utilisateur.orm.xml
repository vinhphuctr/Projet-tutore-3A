<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="App\Entity\Utilisateur" table="utilisateur">
    <id name="idUtilisateur" type="integer" column="id_utilisateur">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nom" type="string" column="nom" length="20" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="prenom" type="string" column="prenom" length="20" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="dateInscription" type="date" column="date_inscription" nullable="false"/>
    <field name="dateNaiss" type="date" column="date_naiss" nullable="false"/>
    <field name="mail" type="string" column="mail" length="50" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="mdp" type="string" column="mdp" length="50" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="genre" type="string" column="genre" length="10" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="telephone" type="string" column="telephone" length="10" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="pays" type="string" column="pays" length="10" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-many field="idVideo" target-entity="Video" inversed-by="idUtilisateur" fetch="LAZY">
      <join-table name="regarder">
        <join-columns>
          <join-column name="id_utilisateur" referenced-column-name="id_utilisateur"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="id_video" referenced-column-name="id_video"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
