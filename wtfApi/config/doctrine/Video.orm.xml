<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="App\Entity\Video" table="video">
    <id name="idVideo" type="integer" column="id_video">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="titre" type="string" column="titre" length="254" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="dateSortie" type="date" column="date_sortie" nullable="false"/>
    <field name="poster" type="string" column="poster" length="254" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="plot" type="text" column="plot" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="trailer" type="string" column="trailer" length="254" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="vo" type="string" column="vo" length="50" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="idProd" type="integer" column="id_prod" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <many-to-many field="idCateg" target-entity="Categorie" inversed-by="idVideo" fetch="LAZY">
      <join-table name="appartenir">
        <join-columns>
          <join-column name="id_video" referenced-column-name="id_video"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="id_categ" referenced-column-name="id_categ"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="idPlateforme" target-entity="Plateforme" inversed-by="idVideo" fetch="LAZY">
      <join-table name="diffuser">
        <join-columns>
          <join-column name="id_video" referenced-column-name="id_video"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="id_plateforme" referenced-column-name="id_plateforme"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="idPersonne" target-entity="Personne" mapped-by="idVideo" fetch="LAZY"/>
    <many-to-many field="idUtilisateur" target-entity="Utilisateur" mapped-by="idVideo" fetch="LAZY"/>
  </entity>
</doctrine-mapping>
